@import 'patterns/variables'
@import 'patterns/fonts'
@import 'patterns/reset'

.header
  width: 100%
  height: 400px
  float: left
  margin-bottom: 50px
  position: fixed
  top: 0
  left: 0
  z-index: $secundary-layer

  &__map
    height: 100%
    
.wrapper
  width: 50%
  max-width: 1000px
  margin: 0 auto
  clear: both

.get-started
  background: #FFFFFF
  position: relative
  z-index $primary-layer
  margin: 400px auto 50px
  padding-top: 30px

  &__title
    font-weight: 700
    text-align: center
    font-size: 30px
    text-transform: uppercase
    color: $primary-color
    margin-bottom: 10px

  &__subtitle
    text-align: center
    margin-bottom: 40px
  
.content__steps
  margin-bottom: 50px

  &-title
    color: $primary-color
    font-weight: bold
    margin-bottom: 15px
  
.command
  background: darken($background, 5%)
  padding: 5px 15px
  line-height: 24px
  margin: 10px 0
  font-size: 14px
  border: 1px solid #DDD
  display: block

  xmp 
    white-space: pre-line
    
.footer
  width: 100%
  text-align: center
  margin-bottom: 40px
  
  &__link
    display: inline-block
    padding: 0 20px
    color: $primary-color
    font-weight: bold

@media screen and (max-width: 1000px)
  .wrapper
    width: 90%

  .content__steps
    width: 100%
    margin-bottom: 60px


@media screen and (max-width: 620px)
  .header, .header__map
    height: 200px
    
  .get-started
    margin-top: 220px
